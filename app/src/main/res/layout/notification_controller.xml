<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="1">

    <ImageView
        android:id="@+id/image_notification_track"
        android:layout_width="@dimen/sub_controller_height"
        android:layout_height="@dimen/sub_controller_height"
        android:src="@drawable/ic_music"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/text_notification_track"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/text_notification_user"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/notification_title_size"
            android:maxLines="1" />

        <TextView
            android:id="@+id/text_notification_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/dp_16"
            android:maxLines="1" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/image_notification_previous"
        android:layout_width="@dimen/sub_controller_button_height_small"
        android:layout_height="@dimen/sub_controller_button_height_small"
        android:background="@drawable/ic_skip_previous"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/image_notification_play"
        android:layout_width="@dimen/sub_controller_button_height"
        android:layout_height="@dimen/sub_controller_button_height"
        android:src="@drawable/ic_play_arrow"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/image_notification_next"
        android:layout_width="@dimen/sub_controller_button_height_small"
        android:layout_height="@dimen/sub_controller_button_height_small"
        android:background="@drawable/ic_skip_next"
        tools:ignore="ContentDescription" />
</LinearLayout>