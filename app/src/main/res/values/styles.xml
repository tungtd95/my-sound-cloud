<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DownloadText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color_gray</item>
        <item name="android:textSize">@dimen/download_text_size</item>
        <item name="android:layout_marginLeft">@dimen/item_track_image_padding</item>
    </style>

    <style name="PlaylistText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">@dimen/playlist_text_size</item>
        <item name="android:layout_marginLeft">@dimen/item_track_image_padding</item>
    </style>

    <style name="DetailHeader">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

</resources>
