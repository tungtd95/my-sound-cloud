<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.framgia.tungvd.soundcloud">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/title_app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".screen.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".data.model.MusicService" />

        <activity android:name=".screen.category.CategoryActivity" />
        <activity
            android:name=".screen.play.PlayActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name=".screen.download.DownloadActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name=".screen.playlist.PlaylistActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name=".screen.search.SearchActivity"
            android:launchMode="singleInstance" />
    </application>

</manifest>